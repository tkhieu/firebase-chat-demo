<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mysquar.chat.activities.FacebookLoginActivity"
    tools:showIn="@layout/activity_facebook_login">



    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/content_facebook_login"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/content_facebook_login"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_facebook_login"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/content_facebook_login"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
